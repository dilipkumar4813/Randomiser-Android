<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dm_250"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="@dimen/dm_0"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dm_16"
        android:fontFamily="@font/cairo_bold"
        android:textSize="@dimen/sp_22"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="@dimen/dm_0"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dm_16"
        android:fontFamily="@font/cairo_regular"
        android:textColor="@color/font_color"
        android:textSize="@dimen/sp_14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_left"
        android:layout_width="@dimen/dm_0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dm_16"
        android:layout_marginTop="@dimen/dm_16"
        android:layout_marginEnd="@dimen/dm_8"
        android:layout_marginBottom="@dimen/dm_16"
        android:background="@drawable/gradient_rounded_button"
        android:contentDescription="@android:string/ok"
        android:text="@android:string/cancel"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guide_50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_description" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_right"
        android:layout_width="@dimen/dm_0"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dm_16"
        android:layout_marginStart="@dimen/dm_8"
        android:layout_marginEnd="@dimen/dm_16"
        android:layout_marginBottom="@dimen/dm_16"
        android:background="@drawable/gradient_rounded_button"
        android:contentDescription="@android:string/ok"
        android:text="@android:string/ok"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/guide_50"
        app:layout_constraintTop_toBottomOf="@id/tv_description" />

</androidx.constraintlayout.widget.ConstraintLayout>